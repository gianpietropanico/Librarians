<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/cardbook"
    android:elevation="3dp">

    <TextView
        android:id="@+id/textViewStartDateFisso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="DATA INIZIO"
        android:textColor="@color/navy"
        android:textSize="16sp"
        android:paddingStart="0dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageViewBookCover"
        app:layout_constraintTop_toBottomOf="@+id/textViewGenre" />

    <TextView
        android:id="@+id/textViewStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:text="STATO"
        android:textAlignment="center"
        android:textColor="@color/navy"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewBookCover"
        app:layout_constraintVertical_bias="0.794" />

    <ImageView
        android:id="@+id/imageViewBookCover"
        android:layout_width="188dp"
        android:layout_height="183dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />


    <TextView
        android:id="@+id/textViewBookNames"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:fontFamily="serif"
        android:maxWidth="200dp"
        android:maxLines="2"
        android:paddingStart="0dp"
        android:paddingEnd="10dp"
        android:text="TITOLO"
        android:textColor="@color/navy"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageViewBookCover"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewGenre"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/light_blue_background"
        android:paddingStart="2dp"
        android:paddingEnd="8dp"
        android:text="Categoria"
        android:gravity="center"
        android:textColor="@color/lemon_cream"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewStartDateFisso"
        app:layout_constraintStart_toEndOf="@+id/imageViewBookCover"
        app:layout_constraintTop_toBottomOf="@+id/textViewISBN" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="DATA FINE"
        android:textColor="@color/navy"
        android:paddingStart="0dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageViewBookCover"
        app:layout_constraintTop_toBottomOf="@+id/textViewStartDate" />

    <TextView
        android:id="@+id/textViewISBN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingStart="0dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="ISBN"
        android:textColor="@color/navy"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageViewBookCover"
        app:layout_constraintTop_toBottomOf="@+id/textViewBookNames" />

    <TextView
        android:id="@+id/textViewStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="TextView"
        android:paddingStart="0dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imageViewBookCover"
        app:layout_constraintTop_toBottomOf="@+id/textViewStartDateFisso" />

    <TextView
        android:id="@+id/textViewEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="188dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingStart="0dp"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <Button
        android:id="@+id/buttonReturnBook"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="25dp"
        android:backgroundTint="@color/navy"
        android:textColor="@color/lemon_cream"
        android:text="Consegna"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewEndDate" />

</androidx.constraintlayout.widget.ConstraintLayout>